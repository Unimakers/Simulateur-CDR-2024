# Fonction pour déplacer le robot d'un point A à un point B
def deplacer_au_point_b():

    # Point A
    point_a = (-100, -100)

    # Point B
    point_b = (100, 100)

    # Aller au point A
    robot.penup()
    robot.goto(point_a)
    robot.pendown()

    # Dessiner une ligne du point A au point B
    robot.goto(point_b)

    # Fermer la fenêtre lors d'un clic
    screen.exitonclick()


# Initialisation de la fenêtre et du robot
    screen = turtle.Screen()
    screen.setup(5000, 3000)
    robot = turtle.Turtle()
    robot.speed(1)

#fonction pour générer le plateau



# Apel de la fonction pour déplacer le robot
deplacer_au_point_b()

